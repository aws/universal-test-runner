{
  "compilerOptions": {
    "target": "ES2018",
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist/lib",
    "declarationDir": "dist/types",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "typeRoots": ["../../node_modules/@types"]
  },
  "include": ["bin", "src", "tests"]
}
