  "main": "dist/lib/src/index.js",
  "bin": {
    "codeaws-test-runner": "dist/lib/bin/cli.js"
  },
  "scripts": {
    "test": "jest",
    "test:ci": "npm test -- --coverage --reporters default --reporters jest-junit",
