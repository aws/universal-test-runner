{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "jest",
    "test:ci": "npm test -- --coverage --reporters default --reporters jest-junit",
    "lint": "eslint --ext .js,.ts .",
    "compile": "npm run --workspaces compile",
    "clean": "npm run --workspaces clean",
    "build": "npm run lint && npm run compile && npm run test:ci",
    "cli": "node ./packages/codeaws-test-runner/dist/lib/bin/cli.js",
    "cli:jest": "npm run cli -- ./packages/codeaws-test-runner/dist/lib/src/adapters/jest.js"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
    "@types/jest": "^27.5.1",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "babel-jest": "^28.1.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.0",
    "jest-junit": "^13.2.0",
    "prettier": "^2.6.2",
    "typescript": "^4.7.2"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
