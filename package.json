{
  "private": true,
  "workspaces": [
    "packages/codeaws-test-runner-types",
    "packages/codeaws-test-runner-logger",
    "packages/codeaws-test-runner",
    "packages/*"
  ],
  "scripts": {
    "test": "jest",
    "test:ci": "npm test -- --coverage --reporters default --reporters jest-junit",
    "lint": "eslint --ext .js,.ts .",
    "compile": "tsc && npm run --workspaces compile",
    "clean": "npm run --workspaces clean",
    "build": "npm run lint && npm run compile && npm run test:ci",
    "cli": "TEP_VERSION=0.1.0 node ./node_modules/.bin/run-tests",
    "cli:jest": "npm run cli -- jest",
    "cli:maven": "npm run cli -- maven",
    "cli:pytest": "npm run cli -- pytest",
    "cli:gradle": "npm run cli -- gradle",
    "generate-attributions": "tsc && node dist/lib/scripts/generate-attributions",
    "prepare": "husky install"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.0.1",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "babel-jest": "^29.0.1",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "jest-junit": "^14.0.1",
    "prettier": "^2.7.1",
    "typescript": "^4.8.3"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
